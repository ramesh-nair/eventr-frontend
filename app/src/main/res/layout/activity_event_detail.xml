<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:id="@+id/event_detail_appbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <com.android.volley.toolbox.NetworkImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/event_detail_pic"
                app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_event_detail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            style="Widget.AppCompat.Light.ProgressBar.Small"
            android:id="@+id/event_detail_progress_bar"
            android:layout_gravity="center" />
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/event_detail_container"
            android:visibility="gone">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_access_time_black_24dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/time_gliph"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:id="@+id/start_time"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/time_gliph"/>


                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_location_black"
                    android:layout_below="@id/start_time"
                    android:layout_marginTop="30dp"
                    android:id="@+id/location_gliph"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_below="@id/start_time"
                    android:id="@+id/event_location"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/location_gliph"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_people_black_24dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/attending_gliph"
                    android:layout_below="@id/event_location"
                    />
                <TextView
                    android:id="@+id/attending_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_below="@id/event_location"
                    android:layout_toRightOf="@id/attending_gliph"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/description_gliph"
                    android:layout_below="@id/attending_count"
                    />
                <TextView
                    android:id="@+id/event_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="30dp"
                    android:layout_below="@id/attending_count"
                    android:layout_toRightOf="@id/description_gliph"/>
            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>
    </FrameLayout>
    <android.support.design.widget.FloatingActionButton
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_done"
        app:layout_anchor="@id/event_detail_appbar"
        app:layout_anchorGravity="bottom|right|end"
        android:id="@+id/floating_action"
        android:visibility="gone"
        />
</android.support.design.widget.CoordinatorLayout>
